<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ListView
        android:id="@+id/music_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_line"
        android:layout_marginBottom="72dp"
        android:background="#FFFFFF"
        >
    </ListView>
    
    <RelativeLayout
        android:id="@+id/home_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#232937"
         >

        <ImageView
            android:id="@+id/album"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/album" />

        <TextView
            android:id="@+id/song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/album"
            android:text="龙卷风"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/songer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/song"
            android:layout_toRightOf="@id/album"
            android:text="周杰伦"
             android:textSize="13dp" 
            android:textColor="#67696D" />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/next_selector" />

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/next_btn"
           android:background="@drawable/img_lockscreen_play_normal" />

        <ImageView
            android:id="@+id/pre_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/play_btn"
            android:src="@drawable/back_selector" />
    </RelativeLayout>

</RelativeLayout>