package 第八章;

import java.util.Random;

import org.omg.CORBA.PRIVATE_MEMBER;

/**
 * @author 张文迪
 * 类名：Shapes
 * 类说明：
 */
public class Shapes
{
   private static RandomShapeGenerator gen = new RandomShapeGenerator(); 
   public static void main(String args[])
   {
        Shape[] s = new Shape[9];
        for(int i = 0; i<s.length;i++)
        	s[i] = gen.next();
        for(Shape shp:s)   //    增强型循环 主要用来做遍历,遍历 s[i]
        	{
        	   shp.draw();
        	   shp.print123456();
        	}
            
   }
}

class Shape
{
    public void draw(){}
    public void erase(){}
    public void print123456()
    {
    	System.out.println("输出了 ~~~~~~~~~~");
    }
}
class Circle extends Shape
{
     public void draw()
     {
    	 System.out.println("Circle.draw()");    	 
     }
     public void erase()
     {
    	 System.out.println("Circle.erase()");
     }
     public void print123456()
     {
     	System.out.println("输出了 ~~~~~~~~~~11111111");
     }
}
class Square extends Shape
{
     public void draw()
     {
    	 System.out.println("Square.draw()");    	 
     }
     public void erase()
     {
    	 System.out.println("Square.erase()");
     }
     public void print123456()
     {
     	System.out.println("输出了 ~~~~~~~~~~22222222");
     }
}
class Triangle extends Shape
{
     public void draw()
     {
    	 System.out.println("Triangle.draw()");
    	
     }
     public void erase()
     {
    	 System.out.println("Triangle.erase()");
     }
     public void print123456()
     {
     	System.out.println("输出了 ~~~~~~~~~~333333333");
     }
}
class RandomShapeGenerator
{
    private Random rand = new Random(47);
    public Shape next()
    {
    	switch (rand.nextInt(3))
		{
		default:
		case 0:	return new Square();					
		case 1: return new Triangle();
		case 2: return new Circle();
		}
    }
}

